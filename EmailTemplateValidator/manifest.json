{
    "name": "Email Template Validator",
    "description": "Plugin to validate email templates that includes image, link, alt tag, etc.",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "contextMenus",
        "notifications",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/get_started16.png",
            "32": "/images/get_started32.png",
            "48": "/images/get_started48.png",
            "128": "/images/get_started128.png"
        }
    },
    "icons": {
        "16": "/images/get_started16.png",
        "32": "/images/get_started32.png",
        "48": "/images/get_started48.png",
        "128": "/images/get_started128.png"
    },
    "options_page": "options.html",
    "content_scripts": [
        {
            "matches": [
                "https://*/*",
                "file:///*/*",
                "http://*/*"
            ],
            "js": [
                "scripts/jquery.min.js",
                "scripts/tinymce/tinymce.min.js",
                "scripts/tinymce/themes/silver/theme.min.js",
                "scripts/tinymce/models/dom/model.min.js",
                "scripts/tinymce/icons/default/icons.min.js"
            ],
            "css": [
                "scripts/tinymce/skins/ui/oxide/skin.min.css",
                "scripts/tinymce/skins/ui/oxide/content.min.css",
                "scripts/tinymce/skins/ui/oxide/content.inline.min.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "scripts/tinymce/skins/ui/oxide/skin.min.css",
                "scripts/tinymce/skins/ui/oxide/content.min.css",
                "scripts/tinymce/skins/ui/oxide/content.inline.min.css"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "host_permissions": [
        "*://*/*"
    ]
}